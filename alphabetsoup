    <script src = "http://code.jquery.com/jquery-latest.js"></script>

    <script src = "http://code.jquery.com/ui/1.11.0/jquery-ui.js"></script>

    <script type="text/javascript">

    var currLetter;
    var kidPrompt;
    var buttonString;
    var letters = new Array();
    var currentX;

   /*This jQuery function allows each letter, which is contained in a span tag, to be dragged
   to a new location.  I have commented out the "stop" event option, which points to a function,
   endPosition, which alerts the ending X position of the letter.  I suspect I could use jQuery
   and this endPosition function to make checking the correct order of the letters simpler.  This check
   is currently done via the Javascript checkOrder function below.  I am stumped at the moment
   as to how to make the jQuery stop:endPosition event option perform the same work, faster.
   */
        
   $(function() {
        $( "span" ).draggable({
        cursor:"move",
        //stop:endPosition

            });
      });

    function endPosition (event, ui){
        var offsetXPos = parseInt( ui.offset.left );
        alert( "Drag stopped!\n\nOffset: (" + offsetXPos + ")\n");

       }


	/*This for loop fills the Letter Array, called letters, with the IDs of all the span tags on the page.
    */
    function fillArray(){
        var len = document.getElementsByTagName("span").length;
	for(i=0;i<len;i++){
	letters[i] = document.getElementsByTagName("span")[i].id;

	    }
	}
	/*
	This for-loop sets the top and left styles of each of the elements to a random number,between 0 and 1,
    multiplied by the height/width of the browser size (with a slight adjustment of 50px to keep elements
    on the page).  It then randomly sets the colour of each letter.
	*/
	function randomizeLetters(){
	    for(i=0;i<letters.length;i++){
	        this.document.getElementById(letters[i]).style.top = Math.floor(Math.random()*(window.innerHeight-50));
		this.document.getElementById(letters[i]).style.left = Math.floor(Math.random()*(window.innerWidth-50));
                this.document.getElementById(letters[i]).style.color = '#'+Math.floor(Math.random()*16777215).toString(16);
            }
	}

    /* This function checks that the child has dragged the letters of the alphabet into the correct postions - 
    namely, A to the left of B, etc.
    */
    
    function checkOrder(){
    if (this.document.getElementById("A").offsetLeft<this.document.getElementById("B").offsetLeft &&
        this.document.getElementById("B").offsetLeft<this.document.getElementById("C").offsetLeft &&
        this.document.getElementById("C").offsetLeft<this.document.getElementById("D").offsetLeft &&
        this.document.getElementById("D").offsetLeft<this.document.getElementById("E").offsetLeft &&
        this.document.getElementById("E").offsetLeft<this.document.getElementById("F").offsetLeft &&
        this.document.getElementById("F").offsetLeft<this.document.getElementById("G").offsetLeft &&
        this.document.getElementById("G").offsetLeft<this.document.getElementById("H").offsetLeft &&
        this.document.getElementById("H").offsetLeft<this.document.getElementById("I").offsetLeft &&
        this.document.getElementById("I").offsetLeft<this.document.getElementById("J").offsetLeft &&
        this.document.getElementById("J").offsetLeft<this.document.getElementById("K").offsetLeft &&
        this.document.getElementById("K").offsetLeft<this.document.getElementById("L").offsetLeft &&
        this.document.getElementById("L").offsetLeft<this.document.getElementById("M").offsetLeft &&
        this.document.getElementById("M").offsetLeft<this.document.getElementById("N").offsetLeft &&
        this.document.getElementById("N").offsetLeft<this.document.getElementById("O").offsetLeft &&
        this.document.getElementById("O").offsetLeft<this.document.getElementById("P").offsetLeft &&
        this.document.getElementById("P").offsetLeft<this.document.getElementById("Q").offsetLeft &&
        this.document.getElementById("Q").offsetLeft<this.document.getElementById("R").offsetLeft &&
        this.document.getElementById("R").offsetLeft<this.document.getElementById("S").offsetLeft &&
        this.document.getElementById("S").offsetLeft<this.document.getElementById("T").offsetLeft &&
        this.document.getElementById("T").offsetLeft<this.document.getElementById("U").offsetLeft &&
        this.document.getElementById("U").offsetLeft<this.document.getElementById("V").offsetLeft &&
        this.document.getElementById("V").offsetLeft<this.document.getElementById("W").offsetLeft &&
        this.document.getElementById("W").offsetLeft<this.document.getElementById("X").offsetLeft &&
        this.document.getElementById("X").offsetLeft<this.document.getElementById("Y").offsetLeft &&
        this.document.getElementById("Y").offsetLeft<this.document.getElementById("Z").offsetLeft)

            {
            alert ("Hooray! You did it.")
            }

        else

            {
            alert ("Keep Trying!")
            }
    }

    /*
	Randomizes letters so child can play again.
	*/

    function playMore(){
        fillArray();
        randomizeLetters();

    }

    </script>

</head>

    <body onLoad= fillArray();randomizeLetters();>

    <script>

    var kidPrompt=prompt("Hi!  What's your name?", "");
    alert("Hello " + kidPrompt + ", please help me put the alphabet in order.");

     </script>


